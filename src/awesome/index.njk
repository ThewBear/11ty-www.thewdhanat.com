{% from 'awesome_utils.njk' import list %}

<main class="w-full max-w-screen-xl mx-auto mb-4 px-4">
  <section class="py-2">
    <h2 class="text-3xl font-bold">{% twemoji "ğŸ“" %} Categories</h2>
    <div class="flex flex-wrap my-4 gap-4">
      {% for category in categories %}
      <a
        class="bg-indigo-700 text-white hover:bg-indigo-800 py-2 px-4"
        href="/awesome/categories/{{ category | slugify }}/"
      >
        {{ category }}
      </a>
      {% endfor %}
    </div>
  </section>
  <section class="py-2">
    <h2 class="text-3xl font-bold">{% twemoji "ğŸ·" %} Tags</h2>
    <div class="flex flex-wrap my-4 gap-4">
      {% for tag in tags %}
      <a
        class="bg-sky-700 text-white hover:bg-sky-800 py-2 px-4"
        href="/awesome/tags/{{ tag | slugify }}/"
      >
        {{ tag }}
      </a>
      {% endfor %}
    </div>
  </section>
  <section class="py-2">
    <div class="flex flex-wrap gap-x-8 gap-y-2 items-baseline">
      <h2 class="text-3xl font-bold">Featured</h2>
      <a href="/awesome/all/" class="underline">See all</a>
    </div>
    {{ list(results.slice(0, 5), "awesome") }}
  </section>
  <aside>{% include "speedlify-score.njk" %}</aside>
</main>
